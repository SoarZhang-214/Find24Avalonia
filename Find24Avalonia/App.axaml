<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"
			 xmlns:u-semi="https://irihi.tech/ursa/themes/semi"
             x:Class="Find24Avalonia.App"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Styles>
		<semi:SemiTheme Locale="en-US"/>
		<u-semi:SemiTheme Locale="en-US"/>
		<StyleInclude Source="avares://Find24Avalonia/Icons.axaml"/>
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key="Dark">
					<SolidColorBrush x:Key='ForegroundColor'>White</SolidColorBrush>
				</ResourceDictionary>
				<ResourceDictionary x:Key="Light">
					<SolidColorBrush x:Key='ForegroundColor'>Black</SolidColorBrush>
				</ResourceDictionary>
				<ResourceDictionary x:Key="Default">
					<SolidColorBrush x:Key='ForegroundColor'>WhiteSmoke</SolidColorBrush>
				</ResourceDictionary>
			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
